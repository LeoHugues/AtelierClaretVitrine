{# templates/blog/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="hero-wrap hero-bread" style="background-image: url({{ asset('vegefoods/vegefoods/images/bg_1.jpg') }});">
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <h1 class="mb-0 bread">Contact</h1>
                </div>
            </div>
        </div>
    </div>

    <section class="ftco-section contact-section bg-light">
        <div class="container">
            <div class="row d-flex mb-5 contact-info">
                <div class="col-md-12">
                    <h1 class="mb-4 text-center">Rentrons en contact !</h1>
                    <div class="col-md-8 col-centered">
                        <p class="text-center">
                            Si l'idée te plait, que tu as des questions  ou que tu es simplement curieux n'hésite pas à nous écrire ou à nous rendre visite !
                        </p>
                    </div>

                </div>
            </div>
            <div class="row block-9">
                <div class="col-md-6 order-md-last d-flex">
                    {{ form_start(contact_form, {'attr': {'class': 'bg-white p-5 contact-form'}}) }}
                    <div class="form-group row">
                        {{ form_widget(contact_form.username) }}
                    </div>
                    <div class="form-group row">
                        {{ form_widget(contact_form.email) }}
                    </div>
                    <div class="form-group row">
                        {{ form_widget(contact_form.subject) }}
                    </div>
                    <div class="form-group row">
                        {{ form_widget(contact_form.message) }}
                    </div>
                    <div class="form-group row">
                        {{ form_widget(contact_form.captcha) }}
                    </div>
                    <div class="form-group row">
                        {{ form_widget(contact_form.submit) }}
                    </div>
                    {{ form_end(contact_form) }}
                </div>

                <div class="col-md-6 d-flex">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2876.7493576634943!2d3.9041705157349105!3d43.86102344698453!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12b41ab4cd66d937%3A0x73157e731bae7775!2sAtelier%20de%20Claret!5e0!3m2!1sfr!2sfr!4v1570089590069!5m2!1sfr!2sfr" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
                </div>
            </div>
        </div>
    </section>
{% endblock %}