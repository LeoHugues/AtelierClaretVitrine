{% extends 'base.html.twig' %}

{% block title %}Coworking{% endblock %}

{% block body %}
<div class="hero-wrap hero-bread" style="background-image: url('{{asset('userfiles/contrib/blog/bg_1.jpg')}}');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-0 bread">Le Blog</h1>
            </div>
        </div>
    </div>
</div>
<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 ftco-animate">
                    <h2 class="mb-5 mt-5">{{ article.title }}</h2>
                    <p>
                        <img src="{{asset(article.filename)}}" alt="" class="img-fluid">
                    </p>
                    {{ article.text|raw }}
                    <div class="tag-widget post-tag-container mb-5 mt-5">
                        <div class="tagcloud">
                            {% for tag in article.tags %}
                                <a href="#" class="tag-cloud-link">{{ tag.name }}</a>
                            {% endfor %}
                        </div>
                    </div>
            </div> <!-- .col-md-8 -->
            <div class="col-lg-4 sidebar ftco-animate">
                <div class="sidebar-box ftco-animate">
                    <h3 class="heading">Cat√©gories</h3>
                    <div class="tagcloud">
                        {% for tag in tags %}
                            <a href="{{ path('app_blog_filter_tag', {'tagid': tag.id}) }}" class="tag-cloud-link">{{ tag.name }}</a>
                        {% endfor %}
                    </div>
                </div>

                <div class="sidebar-box ftco-animate">
                    <h3 class="heading">A la Une</h3>

                    <div class="sidebar-box ftco-animate">
                        {% for actu in actus %}
                            <div class="block-21 mb-4 d-flex">
                                <a class="blog-img mr-4" href="{{ path('app_blog_article_show', {'idArticle' : actu.id}) }}" style="background-image: url({{asset(actu.filename)}});"></a>
                                <div class="text">
                                    <h3 class="heading-1"><a href="{{ path('app_blog_article_show', {'idArticle' : actu.id}) }}">{{ actu.title }}</a></h3>
                                    <div class="meta">
                                        <div>
                                            <a href="{{ path('app_blog_article_show', {'idArticle' : actu.id}) }}"><span class="icon-calendar"></span> {{ actu.publicationDate|date('d M y')}}</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> <!-- .section -->
{% endblock body %}